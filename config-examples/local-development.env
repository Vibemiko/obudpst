# =====================================================================
# Local Development Configuration
# =====================================================================
# This configuration is for running both frontend and backend on the
# same machine (localhost). Ideal for development without network access.
# =====================================================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend Configuration
# Use 0.0.0.0 to allow connections from other terminals on same machine
HOST=0.0.0.0
PORT=3000
NODE_ENV=development

# Frontend Configuration
VITE_HOST=0.0.0.0
VITE_PORT=5173

# API URL - Leave commented for local proxy mode
# VITE_API_URL=

# Binary Configuration
UDPST_BINARY_PATH=./udpst
